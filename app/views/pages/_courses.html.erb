<section id="courses" class="bg-gray-50 section-padding font-inter">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-base font-semibold leading-7 accent-text">Courses</h2>
      <p class="mt-2 heading-lg text-gray-900">
        Everything you need to master business English communication
      </p>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        We offer a range of specialized courses designed to meet your specific English communication needs in professional environments.
      </p>
    </div>
    
    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
        
        <!-- Business English Card -->
        <div class="modern-card">
          <div class="w-full h-48 rounded-2xl mb-6 overflow-hidden">
            <%= image_tag "business.jpg", class: "w-full h-full object-cover", alt: "Business English Course" %>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Business English</h3>
          <p class="text-gray-600 mb-6">
            Master professional communication skills for meetings, presentations, and client interactions.
          </p>
          <a href="#" class="btn-primary">View Details</a>
        </div>

        <!-- General English Card -->
        <div class="modern-card">
          <div class="w-full h-48 rounded-2xl mb-6 overflow-hidden">
            <%= image_tag "general.jpg", class: "w-full h-full object-cover", alt: "General English Course" %>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">General English</h3>
          <p class="text-gray-600 mb-6">
            Build confidence in everyday English conversations and improve your overall fluency.
          </p>
          <a href="#" class="btn-primary">View Details</a>
        </div>

        <!-- Test Preparation Card -->
        <div class="modern-card">
          <div class="w-full h-48 rounded-2xl mb-6 overflow-hidden">
            <%= image_tag "test.jpg", class: "w-full h-full object-cover", alt: "Test Preparation Course" %>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Test Preparation</h3>
          <p class="text-gray-600 mb-6">
            Prepare for TOEFL, IELTS, or other English proficiency exams with targeted strategies.
          </p>
          <a href="#" class="btn-primary">View Details</a>
        </div>

        <!-- Interview Skills Card -->
        <div class="modern-card">
          <div class="w-full h-48 rounded-2xl mb-6 overflow-hidden">
            <%= image_tag "interview.jpg", class: "w-full h-full object-cover", alt: "Interview Skills Course" %>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Interview Skills</h3>
          <p class="text-gray-600 mb-6">
            Ace job interviews with confidence through role-playing and common question practice.
          </p>
          <a href="#" class="btn-primary">View Details</a>
        </div>

      </div>
    </div>
  </div>
</section>
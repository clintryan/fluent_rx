<section id="companies" class="bg-gray-50 section-padding font-inter">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-xl text-center">
      <h2 class="text-lg font-semibold leading-8 tracking-tight accent-text">Wall of Success</h2>
      <p class="mt-2 heading-lg text-gray-900">
        Where our students work
      </p>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        Here are examples of how our students have transformed their careers through our sessions.
      </p>
    </div>
    <div class="mx-auto mt-16 grid max-w-lg grid-cols-2 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-3 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-6">
      <div class="col-span-1 flex justify-center lg:col-span-1">
        <div class="h-12 w-auto flex items-center justify-center">
          <%= image_tag "citi.png", class: "h-8 w-auto object-contain", alt: "Citigroup" %>
        </div>
      </div>
      <div class="col-span-1 flex justify-center lg:col-span-1">
        <div class="h-12 w-auto flex items-center justify-center">
          <%= image_tag "jpmorgan.svg", class: "h-8 w-auto object-contain", alt: "JPMorgan" %>
        </div>
      </div>
      <div class="col-span-1 flex justify-center lg:col-span-1">
        <div class="h-12 w-auto flex items-center justify-center">
          <%= image_tag "google.png", class: "h-8 w-auto object-contain", alt: "Google" %>
        </div>
      </div>
      <div class="col-span-1 flex justify-center lg:col-span-1">
        <div class="h-12 w-auto flex items-center justify-center">
          <%= image_tag "tesla.png", class: "h-8 w-auto object-contain", alt: "Tesla" %>
        </div>
      </div>
      <div class="col-span-1 flex justify-center lg:col-span-1">
        <div class="h-12 w-auto flex items-center justify-center">
          <%= image_tag "samsung.png", class: "h-8 w-auto object-contain", alt: "Samsung" %>
        </div>
      </div>
      <div class="col-span-1 flex justify-center lg:col-span-1">
        <div class="h-12 w-auto flex items-center justify-center">
          <%= image_tag "yale.jpg", class: "h-12 w-auto object-contain", alt: "Yale" %>
        </div>
      </div>
    </div>
  </div>
</section>
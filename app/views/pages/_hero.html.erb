<section class="hero-section relative overflow-hidden bg-white font-inter">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Hero Content -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center py-16 sm:py-24 lg:py-28">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl mb-6">
          Sound smarter when speaking English.
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600 mb-10">
          Personalized coaching to help you communicate your ideas with clarity and impact in any professional setting.
        </p>
        <div class="flex items-center justify-center lg:justify-start gap-x-6">
          <a href="" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/fluentrx/infosession'});return false;" class="btn-primary">
            Book a free consultation
          </a>
          <a href="#courses" class="btn-ghost">
            See our courses
          </a>
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="flex justify-center lg:justify-end">
        <div class="relative w-full max-w-lg">
          <div class="w-full h-96 rounded-2xl overflow-hidden modern-image">
            <%= image_tag "hero.jpg", class: "w-full h-full object-cover", alt: "Professional English Communication Training" %>
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-4 -left-4 w-20 h-20 bg-blue-100 rounded-full opacity-60"></div>
          <div class="absolute -bottom-4 -right-4 w-16 h-16 bg-orange-100 rounded-full opacity-40"></div>
        </div>
      </div>
    </div>

    <!-- Wall of Fame Section -->
    <div class="py-16 border-t border-gray-100">
      <div class="mx-auto max-w-2xl text-center mb-12">
        <h2 class="text-2xl font-bold text-gray-900">
          Helping professionals succeed at top global companies
        </h2>
      </div>
      <div class="mx-auto grid max-w-lg grid-cols-2 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-3 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-10">
        <img class="col-span-1 max-h-8 w-full object-contain lg:col-span-1" src="<%= asset_path('citi.png') %>" alt="Citi" width="158" height="48">
        <img class="col-span-1 max-h-8 w-full object-contain lg:col-span-1" src="<%= asset_path('jpmorgan.svg') %>" alt="JPMorgan Chase" width="158" height="48">
        <img class="col-span-1 max-h-8 w-full object-contain lg:col-span-1" src="<%= asset_path('google.png') %>" alt="Google" width="158" height="48">
        <img class="col-span-1 max-h-8 w-full object-contain lg:col-span-1" src="<%= asset_path('tesla.png') %>" alt="Tesla" width="158" height="48">
        <img class="col-span-1 max-h-8 w-full object-contain lg:col-span-1" src="<%= asset_path('samsung.png') %>" alt="Samsung" width="158" height="48">
        <img class="col-span-1 max-h-12 w-full object-contain lg:col-span-1" src="<%= asset_path('Tsmc.svg.png') %>" alt="TSMC" width="158" height="48">
        <img class="col-span-1 max-h-12 w-full object-contain lg:col-span-1" src="<%= asset_path('Savills.svg.png') %>" alt="Savills" width="158" height="48">
        <img class="col-span-1 max-h-8 w-full object-contain lg:col-span-1" src="<%= asset_path('CBRE.svg.png') %>" alt="CBRE" width="158" height="48">
        <img class="col-span-1 max-h-8 w-full object-contain lg:col-span-1" src="<%= asset_path('Lenovo.png') %>" alt="Lenovo" width="158" height="48">
        <img class="col-span-1 max-h-12 w-full object-contain lg:col-span-1" src="<%= asset_path('yale.jpg') %>" alt="Yale" width="158" height="48">
      </div>
    </div>
  </div>
</section>
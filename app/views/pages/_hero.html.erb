<section class="relative overflow-hidden bg-white pt-4 lg:pt-6 pb-12 lg:pb-16 min-h-[70vh] flex items-center">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Hero Content -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center py-3 sm:py-4.5 lg:py-5">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <h2 class="text-4xl font-bold tracking-tight text-primary sm:text-6xl mb-6">
          Sound smarter when speaking English.
        </h2>
        <p class="mt-6 text-lg leading-8 text-text-dark mb-10">
          Personalized English language training to help you communicate your ideas with clarity and impact in any professional setting.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4">
          <%= render 'shared/button', text: "Book a free consultation", url: "/book", type: :primary, options: { class: "w-full sm:w-auto" } %>
          <%= render 'shared/button', text: "Explore courses", url: "#courses", type: :ghost, options: { class: "w-full sm:w-auto" } %>
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="flex justify-center lg:justify-end">
        <div class="relative w-full max-w-lg">
          <div class="w-full rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-[1.01]" style="aspect-ratio: 10/7;">
            <%= image_tag "hero.png", class: "w-full h-full object-cover object-center", alt: "Professional English Communication Training" %>
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-4 -left-4 w-20 h-20 bg-blue-100 rounded-full opacity-60"></div>
          <div class="absolute -bottom-4 -right-4 w-16 h-16 bg-orange-100 rounded-full opacity-40"></div>
        </div>
      </div>
    </div>

    
  </div>
</section>
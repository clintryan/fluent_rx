<%= content_for :page_title, "Contact Us - FluentRx" %>

<section class="bg-white py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Flash Messages -->
    <% if flash[:success] %>
      <div class="mb-8 rounded-md bg-green-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-green-800"><%= flash[:success] %></p>
          </div>
        </div>
      </div>
    <% end %>
    
    <% if flash[:error] %>
      <div class="mb-8 rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-red-800"><%= flash[:error] %></p>
          </div>
        </div>
      </div>
    <% end %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Left Column: Contact Form -->
      <div>
        <div class="max-w-xl">
          <p class="text-lg font-semibold leading-8 tracking-tight text-secondary section-underline section-underline-left">Contact Us</p>
          <h2 class="mt-2 text-4xl font-bold tracking-tight text-primary sm:text-5xl">
            Get in touch.
          </h2>
          <p class="mt-6 text-lg leading-8 text-text-dark">
            We're here to answer your questions. Fill out the form below, and a member of the FluentRx team will be in touch shortly.
          </p>
        </div>

        <%= form_tag contact_path, method: :post, data: { turbo: false }, class: "mt-6 space-y-8" do %>
          <div class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8">
            <!-- Full Name -->
            <div class="sm:col-span-2">
              <label for="full_name" class="block mb-2 text-sm font-medium text-gray-900">Your name</label>
              <div class="mt-1">
                <input type="text" name="full_name" id="full_name" autocomplete="name" required
                  class="block w-full p-2.5 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary focus:border-primary">
              </div>
            </div>

            <!-- Email -->
            <div class="sm:col-span-2">
              <label for="email" class="block mb-2 text-sm font-medium text-gray-900">Email address</label>
              <div class="mt-1">
                <input type="email" name="email" id="email" autocomplete="email" required
                  class="block w-full p-2.5 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary focus:border-primary" placeholder="name@company.com">
              </div>
            </div>

            <!-- Subject Dropdown -->
            <div class="sm:col-span-2">
              <label for="subject" class="block mb-2 text-sm font-medium text-gray-900">Subject</label>
              <div class="mt-1">
                <select id="subject" name="subject" required
                  class="block w-full p-2.5 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 shadow-sm focus:ring-primary focus:border-primary">
                  <option value="">Please select...</option>
                  <option value="general">General Inquiry</option>
                  <option value="course">Question About a Course</option>
                  <option value="support">Technical Support</option>
                </select>
              </div>
            </div>

            <!-- Message -->
            <div class="sm:col-span-2">
              <label for="message" class="block mb-2 text-sm font-medium text-gray-900">Message</label>
              <div class="mt-1">
                <textarea id="message" name="message" rows="6" required
                  class="block w-full p-2.5 text-sm text-gray-900 bg-gray-50 rounded-lg shadow-sm border border-gray-300 focus:ring-primary focus:border-primary" placeholder="How can we help?"></textarea>
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="sm:col-span-2">
            <%= submit_tag "Send message", class: "inline-flex items-center justify-center py-3 px-5 text-sm font-medium text-center text-white rounded-lg bg-secondary hover:bg-secondary-dark focus:ring-4 focus:outline-none focus:ring-secondary/30 transition-colors duration-200 w-full sm:w-auto" %>
          </div>
        <% end %>
      </div>

      <!-- Right Column: Additional Info & CTA -->
      <div class="lg:pl-8 xl:pl-12">
        <div class="space-y-12">
          <!-- Alternative Contact Methods -->
          <div class="space-y-6">
            <h3 class="text-lg font-semibold text-gray-900">Alternative Contact Methods</h3>
            
            <div class="space-y-4">
              <div class="pt-2 space-y-3">
                <ul class="space-y-2">
                  <li>
                    <a href="mailto:info@fluentrx.com" class="inline-flex items-center gap-3 text-gray-700 hover:text-primary transition-colors">
                      <i class="fa-solid fa-envelope text-2xl text-secondary"></i>
                      <span class="text-sm">Email</span>
                    </a>
                  </li>
                  <li>
                    <a href="https://wa.me/66935515200" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 text-gray-700 hover:text-primary transition-colors">
                      <i class="fa-brands fa-whatsapp text-2xl text-secondary"></i>
                      <span class="text-sm">WhatsApp</span>
                    </a>
                  </li>
                  <li>
                    <a href="https://www.facebook.com/FluentRx/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 text-gray-700 hover:text-primary transition-colors">
                      <i class="fa-brands fa-facebook text-2xl text-secondary"></i>
                      <span class="text-sm">Facebook</span>
                    </a>
                  </li>
                  <li>
                    <a href="https://www.instagram.com/fluent_rx/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 text-gray-700 hover:text-primary transition-colors">
                      <i class="fa-brands fa-instagram text-2xl text-secondary"></i>
                      <span class="text-sm">Instagram</span>
                    </a>
                  </li>
                  <li>
                    <a href="https://x.com/fluentrx" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 text-gray-700 hover:text-primary transition-colors">
                      <i class="fa-brands fa-x-twitter text-2xl text-secondary"></i>
                      <span class="text-sm">X</span>
                    </a>
                  </li>
                  <li>
                    <a href="https://linkedin.com/in/klintrock" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 text-gray-700 hover:text-primary transition-colors">
                      <i class="fa-brands fa-linkedin text-2xl text-secondary"></i>
                      <span class="text-sm">LinkedIn</span>
                    </a>
                  </li>
                </ul>
              </div>
 
              
            </div>
          </div>

          <!-- Book a Consultation CTA -->
          <div class="bg-gray-50 rounded-2xl p-8">
            <div class="space-y-6">
              <h3 class="text-2xl font-bold tracking-tight text-primary">
                Ready to build a plan for your professional voice?
              </h3>
              <p class="text-lg text-text-dark">
                Schedule a free consultation with our expert team to discuss your goals and create a personalized learning path.
              </p>
              <%= render 'shared/button', 
                  text: "Book a free consultation", 
                  url: "javascript:void(0)", 
                  type: :primary, 
                  options: { 
                    onclick: "Calendly.initPopupWidget({url: 'https://calendly.com/fluentrx/infosession'});return false;",
                    class: "w-full"
                  } 
              %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
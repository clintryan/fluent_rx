<!-- CTA Section -->
<section class="<%= local_assigns[:background_class] || 'bg-gray-50' %> py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <p class="text-lg font-semibold leading-8 tracking-tight text-secondary section-underline">Ready to Start?</p>
      <h2 class="mt-2 text-5xl font-bold leading-tight tracking-tight text-primary mb-6">
        Invest in your professional voice.
      </h2>
      <p class="text-xl leading-8 text-text-dark mb-10">
        Clear, confident communication is the most powerful tool for your career. Let's build yours together.
      </p>
      
      <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
        <%= render 'shared/button', text: "Book a free consultation", url: "/book", type: :primary, options: { class: "w-full sm:w-auto" } %>
        <%= render 'shared/button', text: "Explore courses", url: "#courses", type: :ghost, options: { class: "w-full sm:w-auto" } %>
      </div>
    </div>
  </div>
</section>